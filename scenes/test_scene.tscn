extends Node3D

# The parent of the spawend item
@export var parent_node: Node3D 


# TODO: Fix the random error when spawning an Item
# TODO: Let it spawn items per signal so we only need one spawner or the spawner node accses an Glabal ItemManager 
#		that spawnes and deletes the iten we want


func _process(_delta: float) -> void:
	if Input.is_action_just_pressed(\"ui_accept\"):
		ItemManager.item_spawned.emit(\"res://items/weapon.tscn\",false,self,Vector3(0,0,0))
	if Input.is_action_just_pressed(\"ui_down\"):
		if self.get_child_count() > 0:
			ItemManager.item_deleted.emit(self.get_child(0))
